{
  "name": "qa.test.class.pactumjs",
  "version": "1.0.0",
  "description": "Apresentação do test.class \"Testes automatizados de API com Pactum JS\"",
  "main": "index.js",
  "repository": "https://github.com/qajonatasmartins/qa.test.class.pactumjs",
  "author": "Jonatas Faria @QAJONATASMARTINS <jonatas1503@hotmail.com>",
  "license": "MIT",
  "devDependencies": {
    "mocha": "^10.4.0",
    "pactum": "^3.6.3",
    "allure-commandline": "^2.23.0",
    "mocha-allure-reporter": "^1.4.0",
    "mochawesome": "^7.1.3",
    "rimraf": "^5.0.1",
    "@faker-js/faker": "^8.0.2"
  },
  "scripts": {
    "test": "mocha ./simple-test/**/**/**.test.js --reporter mochawesome --require mochawesome/register",
    "test1": "mocha ./simple-test/exemplo1.test.js --reporter mochawesome --require mochawesome/register",
    "test2": "mocha ./simple-test/exemplo2.test.js --reporter mochawesome --require mochawesome/register",
    "data_template": "mocha ./data-management/tests/data-template/**.test.js --reporter mochawesome --require mochawesome/register",
    "data_map": "mocha ./data-management/tests/data-map/**.test.js --reporter mochawesome --require mochawesome/register",
    "data_function": "mocha ./data-management/tests/data-function/**.test.js --reporter mochawesome --require mochawesome/register",
    "data_store": "mocha ./data-management/tests/data-store/**.test.js --reporter mochawesome --require mochawesome/register",
    "e2e": "mocha ./e2e/**.test.js --reporter mochawesome --require mochawesome/register",
    "clean": "rimraf allure-report & rimraf allure-results",
    "allure": "npm run clean && mocha ./**/**/**/**.test.js --reporter mocha-allure-reporter && npm run allure-generation",
    "allure-generation": "npx allure generate ./allure-results",
    "allure-open": "npx allure open"
  }
}
